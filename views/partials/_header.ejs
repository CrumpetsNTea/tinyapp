<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(userId){ %>
          <form method="POST" action="/logout" class="form-inline">
              <span style="margin-left: 740px; "  >Logged In As: <%= userId["email"] %></span>
              <button type="submit" class="btn btn-outline-dark" style="margin-left: 10px">Logout</button>
          </form>
            <% } if(!userId) { %>  
          <form method="POST" action="/login" class="form-inline">
          <input class="form-control" type="text" id="username" name="username" style="width: 200px; margin-left: 780px; ">
          <button type="submit" class="btn btn-primary" style="margin-left: 10px">Login</button>
          <% } %>
      </div>
    </div>
  </nav>
</header>